{
    "compilerOptions": {
        "target": "es2016",
        "declaration": true,
        "declarationDir": "./dist/package/types",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "react-jsx",
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "importHelpers": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}